<section id="news" class="p-5">
    <div class="container">
        <h4>Market News & Trade Ideas</h4>
        <div class="row">

            <div class="col-md-4">
                <img class="news-img" src="\images\news1.jpg" alt="news image">

                <% news_data_1.forEach(news_data_1 => { %>
                    <div class="news-item">
                        <a href="<%= news_data_1.link %>" target="_blank"> <%= news_data_1.title %> </a>
                        <p><i class="fa fa-calendar" aria-hidden="true"></i> &nbsp;&nbsp;&nbsp; <%= news_data_1.pubDate %> </p>
                    </div>
                <% }) %>

            </div>
            <div class="col-md-4">
                <img class="news-img" src="\images\new2.jpeg" alt="news image">

                <% news_data_2.forEach(news_data_2 => { %>
                    <div class="news-item">
                        <a href="<%= news_data_2.link %>" target="_blank"> <%= news_data_2.title %> </a>
                        <p><i class="fa fa-calendar" aria-hidden="true"></i> &nbsp;&nbsp;&nbsp; <%= news_data_2.pubDate %> </p>
                    </div>
                <% }) %>

            </div>
            <div class="col-md-4">
                <img class="news-img" src="\images\s&p.jpg" alt="news image">
                
                <% news_data_3.forEach(news_data_3 => { %>
                    <div class="news-item">
                        <a href="<%= news_data_3.link %>" target="_blank"> <%= news_data_3.title %> </a>
                        <p><i class="fa fa-calendar" aria-hidden="true"></i> &nbsp;&nbsp;&nbsp; <%= news_data_3.pubDate %> </p>
                    </div>
                <% }) %>

            </div>

        </div>

        <img src="\images\in-the-news.JPG" alt="We are in the news" width="100%" oncontextmenu="return false">
    </div>
</section>