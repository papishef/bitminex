<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BitMinex || <%= pageDescription %> </title>

    <!-- site icon -->
    <link rel="icon" href="\images\logo.png" type="image/*" sizes="any">

    <!-- bootstrap cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({
                pageLanguage: 'en'
            }, 'google_translate_element');
        }
    </script>
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit">
    </script>

    <!-- font awesome library cdn -->
    <script src="https://kit.fontawesome.com/f6db40abb1.js"></script>
    <link rel="stylesheet" href="/css/user-dash.css">

</head>

<body>

    <div class="navigation">
        <ul>
            <li class=<%= path === "/user" ? "clicked-menu" : "" %>>
                <a href="/admin/user/<%= foundUser._id %>">
                    <span class=""><img src="\uploads\<%= foundUser.idCard %>" alt=""></span>
                    <span class="title"><%= foundUser.firstName %> <%= foundUser.lastName %> <span
                            class="form-text">(Overview)</span></span>
                </a>
            </li>

            <li class=<%= path === "/investments" ? "clicked-menu" : "" %>>
                <a href="/admin/investments/<%= foundUser._id %>">
                    <span class="icon"><i class="fa fa-refresh" aria-hidden="true"></i></span>
                    <span class="title">Ongoing Investments</span>
                </a>
            </li>

            <li class=<%= path === "/wallets" ? "clicked-menu" : "" %>>
                <a href="/admin/wallets/<%= foundUser._id %>">
                    <span class="icon"><i class="fa fa-money" aria-hidden="true"></i></span>
                    <span class="title">Wallets</span>
                </a>
            </li>

            <li class=<%= path === "/history" ? "clicked-menu" : "" %>>
                <a href="/admin/history/<%= foundUser._id %>">
                    <span class="icon"><i class="fa fa-history" aria-hidden="true"></i></span>
                    <span class="title">Activity History</span>
                </a>
            </li>

            <li class=<%= path === "/alerts" ? "clicked-menu" : "" %>>
                <a href="/admin/alerts/<%= foundUser._id %>">
                    <span class="icon"><i class="fa fa-bell" aria-hidden="true"></i></span>
                    <span class="title">Alerts</span>
                </a>
            </li>

            <li class=<%= path === "/settings" ? "clicked-menu" : "" %>>
                <a href="/admin/settings/<%= foundUser._id %>">
                    <span class="icon"><i class="fa fa-cogs" aria-hidden="true"></i></span>
                    <span class="title">Settings</span>
                </a>
            </li>

            <li class=<%= path === "/help" ? "clicked-menu" : "" %>>
                <a href="/contact" target="_blank">
                    <span class="icon"><i class="fa fa-question" aria-hidden="true"></i></span>
                    <span class="title">Help</span>
                </a>
            </li>

            <li>
                <a href="/auth/logout">
                    <span class="icon"><i class="fa fa-sign-out" aria-hidden="true"></i></span>
                    <span class="title">Sign out</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="toggle" onclick="toggleMenu()"></div>

    <div class="dashHeader">
        <a href="/"><img src="\images\logo-dash.png" alt=""></a>
    </div>
    <div id="google_translate_element" class="google_translate_element"></div>